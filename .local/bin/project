
#!/bin/bash

NAME=$1
DIR=./$NAME

mkdir -p "$DIR"
cd "$DIR" || exit

# Create venv
python -m venv venv

# Create direnv config
echo "source ./venv/bin/activate" > .envrc
direnv allow

# Add basic files
touch script.py requirements.txt

# Copy path to clipboard
echo "$DIR" | xclip -selection clipboard


echo "âœ… Project '$NAME' created at $DIR with venv + direnv."

